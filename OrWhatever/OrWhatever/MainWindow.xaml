<Window x:Class="OrWhatever.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OrWhatever"
        mc:Ignorable="d"
        Title="MainWindow" Height="552" Width="438">
    <Grid HorizontalAlignment="Center" Width="438">
        <Image x:Name="petDisplay" HorizontalAlignment="Left" Height="208" Margin="82,141,0,0" VerticalAlignment="Top" Width="274" RenderTransformOrigin="0.516,0.527" Source="/eat.jpg"/>
        <Label x:Name="hungerLabel" Content="Hunger" HorizontalAlignment="Left" Margin="110,353,0,0" VerticalAlignment="Top" Height="81" Width="144" FontSize="36"/>
        <Label x:Name="hungerStat" Content="100" HorizontalAlignment="Left" Margin="260,353,0,0" VerticalAlignment="Top" Height="81" Width="72" FontSize="36"/>
        <Button x:Name="feedButton" Content="Feed" HorizontalAlignment="Left" Margin="82,439,0,0" VerticalAlignment="Top" Height="49" Width="274" FontSize="36" Click="feedButton_Click"/>
        <Label x:Name="label" Content="It's a Virtual Pet wow" HorizontalAlignment="Left" Margin="160,110,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
